<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/productCatalog.css">
    <title>Products</title>
</head>
<body>
    <%if(isAdmin == null) {%>
        <%- include('./partials/headerVisitor') %>
    <%}
    if(isAdmin == 1) {%>
        <%- include('./partials/headerAdmin') %>
    <%}
    if(isAdmin == 0) {%>
        <%- include('./partials/headerUser') %>
    <%}%>
    <% if(message.length > 0) { %>
        <div class = "alert" role = "alert">
            <h2><%= message %></h2>
        </div>
      <%} %>
        <%if(data.length) { %>
            <%for(var i = 0; i< data.length; i++) {%>
                <div class="card">
                    <h3><%=data[i].fullName%></h3>
                    <p class="price"><%=data[i].price%></p>
                    <p><%=data[i].prodDesc%></p>
                    <p>ProductID = <%= data[i].productID%></p>
                    <form action='/viewItem' method = 'post'>
                        <button class="btn" type="submit">Add to Cart</button>
                        <input type="hidden" name="productID" value="<%= data[i].productID%>">
                        <input type="hidden" name="userID" value="<%= userID %>">
                    </form>
                </div>
            <%}%>
        <%}%>
</body>
</html>